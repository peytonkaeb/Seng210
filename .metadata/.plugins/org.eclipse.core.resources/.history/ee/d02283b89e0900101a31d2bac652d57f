package guiLearning;
import javax.swing.JFrame;
import javax.swing.ImageIcon;
import javax.swing.JLabel;

import java.awt.Color;
import java.awt.FlowLayout;
import java.awt.Image; 


public class Driver {
    public static void main(String args[]) {
    	//frame
        JFrame frameName = new JFrame(); // establishes frame
        frameName.setTitle("Peyton's Pop-Up <3"); // sets title
        frameName.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE); // exits when closed
        frameName.setSize(400, 300); // sets the window size (important to make it visible)
        frameName.setVisible(true); // makes the frame appear on screen
        
        //image
        ImageIcon image = new ImageIcon("C:/Users/skkae/Pictures/Camera Roll/262BAA35-1A58-49C4-BAD9-93143D22F727.jpg");
        frameName.setIconImage(image.getImage());
        ImageIcon originalIcon = new ImageIcon("C:/Users/skkae/Pictures/Camera Roll/262BAA35-1A58-49C4-BAD9-93143D22F727.jpg");
        Image image2 = originalIcon.getImage().getScaledInstance(200, 150, Image.SCALE_SMOOTH);
        ImageIcon resizedIcon = new ImageIcon(image2);
        
        //label
        JLabel labelName = new JLabel();
        labelName.setIcon(resizedIcon);
    	labelName.setText("Hello my name is Peyton");
    	labelName.setHorizontalTextPosition(JLabel.CENTER);
    	labelName.setVerticalTextPosition(JLabel.BOTTOM);
    	labelName.setForeground(Color.PINK);
    	

    	frameName.add(labelName);
    	
    }
}