package guiLearning;
import javax.swing.*;
import javax.swing.border.Border;
import java.awt.*;
import java.awt.event.*;

public class Driver implements ActionListener {
    JButton button = new JButton();
    JLabel labelName; // Make it a class variable so we can reference it in the drag listener.

    public static void main(String args[]) {
        Driver driver = new Driver();

        // Frame
        JFrame frameName = new JFrame();
        frameName.setLayout(null); // Allows manual positioning

        // Image
        ImageIcon originalIcon = new ImageIcon("C:/Users/skkae/Pictures/Camera Roll/262BAA35-1A58-49C4-BAD9-93143D22F727.jpg");
        Image image2 = originalIcon.getImage().getScaledInstance(200, 150, Image.SCALE_SMOOTH);
        ImageIcon resizedIcon = new ImageIcon(image2);

        // Label (Draggable Image)
        driver.labelName = new JLabel();
        driver.labelName.setIcon(resizedIcon);
        driver.labelName.setBounds(50, 50, 200, 150);
        driver.labelName.setTransferHandler(new TransferHandler("icon")); // Enables dragging

        // Make Image Draggable
        driver.labelName.addMouseListener(new MouseAdapter() {
            public void mousePressed(MouseEvent e) {
                driver.labelName.getTransferHandler().exportAsDrag(driver.labelName, e, TransferHandler.COPY);
            }
        });

        // Dragging with MouseMotionListener
        driver.labelName.addMouseMotionListener(new MouseMotionAdapter() {
            private int mouseX, mouseY;

            @Override
            public void mousePressed(MouseEvent e) {
                mouseX = e.getX();
                mouseY = e.getY();
            }

            @Override
            public void mouseDragged(MouseEvent e) {
                int x = e.getXOnScreen() - mouseX;
                int y = e.getYOnScreen() - mouseY;
                driver.labelName.setLocation(x, y);
            }
        });

        // Button
        driver.button.setBounds(75, 220, 100, 50);
        driver.button.addActionListener(driver);
        driver.button.setText("Open Window");
        driver.button.setBorder(BorderFactory.createDashedBorder(null, 1, 5));

        // Frame settings
        frameName.add(driver.labelName);
        frameName.add(driver.button);
        frameName.setTitle("Peyton's Drag & Drop GUI");
        frameName.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
        frameName.setSize(400, 400);
        frameName.setVisible(true);

        // Open new window on button click
        driver.button.addActionListener(e -> new NewWindow());
    }

    @Override
    public void actionPerformed(ActionEvent e) {
        if (e.getSource() == button) {
            System.out.println("Womp");
            button.setEnabled(false);
        }
    }
}

// âœ… New Window Class
class NewWindow {
    JFrame frame;

    public NewWindow() {
        frame = new JFrame("New Window");
        JLabel label = new JLabel("This is a new window!");
        label.setBounds(50, 50, 300, 50);
        label.setFont(new Font(null, Font.PLAIN, 25));

        frame.add(label);
        frame.setDefaultCloseOperation(JFrame.DISPOSE_ON_CLOSE);
        frame.setSize(420, 420);
        frame.setLayout(null);
        frame.setVisible(true);
    }
}